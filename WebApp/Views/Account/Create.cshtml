@model WebApp.Models.Book

@{
    ViewData["Title"] = "Create Record";
}

<div class="text-center">
    <h1 class="display-4 text-success" style="font-weight:bold;">Create Record</h1>
</div>

<form asp-action="Create" method="post" style="background-color: #ddd">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="m-2" style="width:90%;">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" style="width:100%;background:#ededed;" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="m-2" style="width:90%;">
        <label class="form-label">Summary</label>
        <input asp-for="Author" class="form-control" style="width:100%;background:#ededed;" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="m-2" style="width:90%;">
        <label class="form-label">Year</label>
        <input asp-for="PublicationYear" class="form-control" style="width:100%;background:#ededed;" />
        <span asp-validation-for="PublicationYear" class="text-danger"></span>
    </div>

    <div class="m-2" style="width:90%;">
        <label class="form-label">Image URL</label>
        <input asp-for="Image" class="form-control" style="width:100%;background:#ededed;" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button class="btn btn-success px-4 m-4"> Create</button>
</form>

<div>
    <a class="text-success" asp-action="Account">Back to Account</a>
</div>
